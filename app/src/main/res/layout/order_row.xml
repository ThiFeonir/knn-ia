<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_margin="4dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/order_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compra Realizada"
        android:textSize="16sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@id/txtview_price_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_price_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="8dp"
        android:text="750.0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_row_title"
        app:layout_constraintStart_toEndOf="@id/txtview_price_card"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/txtview_price_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Valor:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textview_price_card"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_row_title" />

</androidx.constraintlayout.widget.ConstraintLayout>